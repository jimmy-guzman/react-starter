{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "pre-commit": {
    "parallel": true,
    "commands": {
      "lint": {
        "glob": "*.{js,cjs,ts,tsx}",
        "run": "pnpm eslint --fix {staged_files}",
        "stage_fixed": true
      },
      "fmt": {
        "glob": "*.{md,json,yml,html,js,cjs,ts,tsx}",
        "run": "pnpm oxfmt --no-error-on-unmatched-pattern {staged_files}",
        "stage_fixed": true
      },
      "knip": {
        "run": "pnpm knip"
      },
      "spell-check": {
        "skip": ["merge", "rebase"],
        "stage_fixed": true,
        "glob": "*.*",
        "run": "pnpm cspell --no-progress {staged_files}"
      }
    }
  }
}
